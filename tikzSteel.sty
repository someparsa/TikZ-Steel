\usepackage{tikz}

\newcommand{\csChannel}[5]{
	\draw [line width=#4 mm, red] (#5,0) -- (#2-#5,0) ;
	\draw [line width=#4 mm, red] (0,#5) -- (0,#1-#5) ;
	\draw [line width=#4 mm, red] (#5,#1) -- (#2-#5,#1) ;

	\draw [line width=#4 mm, blue] (0,#5) arc (180:270:#5);
	\draw [line width=#4 mm, blue] (0,#1-#5) arc (180:90:#5);

	\ifnum #3 > 0
    		\draw [line width=#4 mm, red] (#2,#5) -- (#2,#3) ;
		\draw [line width=#4 mm, red] (#2,#1-#5) -- (#2,#1-#3) ;
		\draw [line width=#4 mm, blue] (#2-#5,#1) arc (90:0:#5);
		\draw [line width=#4 mm, blue] (#2-#5,0) arc (270:360:#5);
	\fi
}

\newcommand{\csBox}[4]{
	\draw [line width=#3 mm, red] (#4,0) -- (#2-#4,0) ;
	\draw [line width=#3 mm, red] (#4,#1) -- (#2-#4,#1) ;	
	\draw [line width=#3 mm, red] (0,#4) -- (0,#1-#4) ;
	\draw [line width=#3 mm, red] (#2,#4) -- (#2,#1-#4) ;
	
	\draw [line width=#3 mm, blue] (0,#4) arc (180:270:#4);
	\draw [line width=#3 mm, blue] (0,#1-#4) arc (180:90:#4);

	\draw [line width=#3 mm, blue] (#2-#4,0) arc (270:360:#4);
	\draw [line width=#3 mm, blue] (#2-#4,#1) arc (90:0:#4);
}

\newcommand{\csZee}[7]{
	\draw [line width=#6 mm, red] (0,#7) -- (0,#1-#7) ;	
	\draw [line width=#6 mm, red] (#7,#1) -- (#2-#7,#1) ;
	\draw [line width=#6 mm, red] (-#7,0) -- (#7-#4,0) ;

	\draw [line width=#6 mm, blue] (0,#1-#7) arc (180:90:#7);
	\draw [line width=#6 mm, blue] (0,#7) arc (0:-90:#7);

	\ifnum #3 > 0
		\draw [line width=#6 mm, red] (#2,#1-#7) -- (#2,#1-#3) ;
		\draw [line width=#6 mm, blue] (#2-#7,#1) arc (90:0:#7);
	\fi

	\ifnum #5 > 0
		\draw [line width=#6 mm, red] (-#4,#7) -- (-#4,#5) ;
		\draw [line width=#6 mm, blue] (#7-#4,0) arc (270:180:#7);
	\fi
}

\newcommand{\csL}[4]{
	\draw [line width=#3 mm, red] (0,#4) -- (0,#1) ;	
	\draw [line width=#3 mm, red] (#4,0) -- (#2,0) ;

	\draw [line width=#3 mm, blue] (0,#4) arc (180:270:#4);

}